<RadzenPanel Style="border-radius: 4px; box-shadow: 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8; margin-bottom: 20px; margin-top: 20px;">
    <ChildContent>
        <div class="row">
            <h2>@Source.Title</h2>
        </div>
        <div class="row">
            @Source.Content
        </div>
        @if (Source.Picture != null)
        {
            <div class="row oi-justify-center">
                <RadzenImage Path="@(Source.Picture)" Style="max-width:100%;max-height:100%;margin:auto" />
            </div>
        }
    </ChildContent>
</RadzenPanel>